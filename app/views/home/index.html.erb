
<div class="flex justify-between gap-6 mt-10">
	<section class="bg-primary-500 bg-opacity-5 w-1/4 rounded-lg shadow p-6">
		<div class="flex justify-between items-center w-full pb-4">
			<h1 class="font-semibold  text-2xl"><%= t("banks") %></h1>
			
			<div class="flex justify-end">
				<button class="btn-primary"><%= t("add_bank") %></button>
			</div>
		</div>

		<hr class="mb-4">

		<table>
			<thead>
				<tr>
					<th>Nombre</th>
					<th>Acciones</th>
				</tr>
			</thead>
			<tbody>
				<% @banks.each do |bank| %>
					<tr>
						<td><%= bank.name %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</section>

	<section class="bg-blue-100 bg-opacity-10 w-3/4 px-10 p-6 rounded-lg shadow">
		<div class="flex justify-between items-center w-full pb-4">
			<h1 class="font-semibold  text-2xl"><%= t("providers") %></h1>
			
			<div class="flex justify-end">
				<button class="btn-primary"><%= t("add_provider") %></button>
			</div>
		</div>

		<hr class="mb-4">
	</section>
</div>

