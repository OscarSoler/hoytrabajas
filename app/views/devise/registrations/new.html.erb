<h2 class="font-bold pb-4 text-xl"><%= t("sign_up") %></h2>
<hr class="mb-8">


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  	
	<%= render "devise/shared/error_messages", resource: resource %>


	<div class="field">
		<%= f.label :email %>
		<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field-input" %>
	</div>

	<div class="field">
		<%= f.label :password %>
		<% if @minimum_password_length %>
		
		<em>(<%= @minimum_password_length %> <%= t("characters_minimum") %> )</em>
		<% end %>
		<%= f.password_field :password, autocomplete: "new-password", class: "field-input" %>
	</div>

	<div class="field">
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation, autocomplete: "new-password", class: "field-input" %>
	</div>

	<div class="actions">
		<%= f.submit t("sign_up"), class:"btn-primary" %>
	</div>
<% end %>

<%= render "devise/shared/links" %>
