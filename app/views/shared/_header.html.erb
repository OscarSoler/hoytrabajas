<header class="bg-secondary-500 shadow">
	<div class="container mx-auto">
		<div class="flex justify-between items-center py-4">
			<div class="flex items-center">
				<img src="<%= asset_path("logo.svg") %>" width="200px" alt="">
			</div>
			<div>
				<% if user_signed_in? %>
					<span class="text-white mr-2"><%= current_user.email %></span>.

					<%= link_to t("logout"), destroy_user_session_path, data: { turbo_method: :delete }, class: "btn-primary" %>
				<% end %>
			</div>
		</div>
	</div>
</header>